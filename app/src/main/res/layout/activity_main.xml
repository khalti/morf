<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/globalPadding">

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/etMobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/globalPadding"
        android:ems="10"
        android:hint="Mobile number"
        android:inputType="textAutoComplete"
        android:maxLength="50"
        android:textColorHint="@color/disabled"
        android:textSize="20sp"
        app:met_baseColor="@color/black"
        app:met_errorColor="@color/danger"
        app:met_floatingLabel="highlight"
        app:met_primaryColor="@color/colorPrimaryDark" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/globalPadding">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/etError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="@dimen/cardPadding"
            android:focusable="false"
            android:textSize="0sp"
            android:visibility="gone"
            app:met_baseColor="@color/white"
            app:met_errorColor="@color/danger"
            app:met_primaryColor="@color/white" />

        <Spinner
            android:id="@+id/spValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/globalPadding">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/etError1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="@dimen/cardPadding"
            android:focusable="false"
            android:textSize="0sp"
            android:visibility="gone"
            app:met_baseColor="@color/white"
            app:met_errorColor="@color/danger"
            app:met_primaryColor="@color/white" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tvValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="..."/>
    </FrameLayout>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/etAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/globalPadding"
        android:ems="10"
        android:hint="Amount"
        android:inputType="textAutoComplete"
        android:maxLength="50"
        android:textColorHint="@color/disabled"
        android:textSize="20sp"
        app:met_baseColor="@color/black"
        app:met_errorColor="@color/danger"
        app:met_floatingLabel="highlight"
        app:met_primaryColor="@color/colorPrimaryDark" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/globalPadding"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:maxLength="50"
        android:textColorHint="@color/disabled"
        android:textSize="20sp"
        app:met_baseColor="@color/black"
        app:met_errorColor="@color/danger"
        app:met_floatingLabel="highlight"
        app:met_primaryColor="@color/colorPrimaryDark" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/etConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/globalPadding"
        android:ems="10"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:maxLength="50"
        android:textColorHint="@color/disabled"
        android:textSize="20sp"
        app:met_baseColor="@color/black"
        app:met_errorColor="@color/danger"
        app:met_floatingLabel="highlight"
        app:met_primaryColor="@color/colorPrimaryDark" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="Submit"
        android:textAllCaps="true" />
</LinearLayout>
